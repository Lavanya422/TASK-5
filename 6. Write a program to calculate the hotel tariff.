package tariff;

import java.util.Scanner;

public class HotelTariffCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input
        int month = scanner.nextInt();
        double roomRentPerDay = scanner.nextDouble();
        int numberOfDays = scanner.nextInt();

        // Check if peak season using switch
        boolean isPeakSeason;
        switch (month) {
            case 4: case 5: case 6: case 11: case 12:
                isPeakSeason = true;
                break;
            default:
                isPeakSeason = false;
        }

        // Calculate tariff
        double totalTariff;
        if (isPeakSeason) {
            totalTariff = roomRentPerDay * 1.2 * numberOfDays; // 20% higher
        } else {
            totalTariff = roomRentPerDay * numberOfDays;
        }

        // Output with 2 decimal places
        System.out.printf("%.2f\n", totalTariff);

        scanner.close();
    }
}

