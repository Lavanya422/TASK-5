package pattern2;

import java.util.Scanner;

public class StarPattern {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter an odd number of rows: ");
        int n = scanner.nextInt();

        int mid = n / 2;

        for (int i = 0; i < n; i++) {
            if (i == mid) {
                // Middle row
                System.out.println(" *");
            } else {
                // All other rows
                System.out.println("* *");
            }
        }

        scanner.close();
    }
}
